style.
  details {
    overflow: auto;
  }
  iframe{
    border-radius: 1em;
    width: 100%;
    height: 460px;
    display: block;
    margin: auto;
  }
  details summary {
    padding: 0;
    padding-left: 1em;
    display: flex;
    align-items: center;
  }
  details > div {
    padding: 0 9em 0 4em;
  }
  summary .index {
    background: black;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    top: 0;
    left: 0;
    width: 2em;
  }    
  summary .pic {
    background: #0a0c17;
    position: absolute;
    height: 100%;
    top: 0;
    right: 0em;
    width: 5em;
  }
  summary .sub {
    padding: .5em 2em;
    background: rgba(0, 0, 0, 0.36);
    width: 100%;
  }
